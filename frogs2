#include <stdio.h>
#include <math.h>
int if1 (float a, float b, float c);
int if2 (float a, float b, float c);
int main (void)
{
    printf ("enter coeff\n");
    float a,b,c;
    printf ("a=");
    scanf ("%f",&a);
    printf ("b=");
    scanf ("%f",&b);
    printf ("c=");
    scanf ("%f",&c);
    if1(a,b,c);
    if2(a,b,c);
}
int if1 (float a, float b, float c)
{
    if (a==0)
    {
        printf ("solution is %.2f ", -c/b);
    }
}
int if2 (float a, float b, float c)
{
    if (a!=0)
    {
        float d,D;

        D=b*b-4*a*c;
        d=sqrt(D);
        if (D==0)
        {
            printf ("solution is %.2f ", ((-b)/2)/a);
        }
        else if (D<0)
        {
            printf ("solution is not");
        }
        else if (D>0)
        {
            printf ("solution is %.2f and %.2f ", ((-b+d)/2)/a, ((-b-d)/2)/a );
        }

    }
}
